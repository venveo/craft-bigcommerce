{
  "name": "venveo/craft-bigcommerce",
  "description": "BigCommerce for Craft CMS",
  "type": "craft-plugin",
  "keywords": [
    "cms",
    "craftcms",
    "big-commerce"
  ],
  "homepage": "https://github.com/venveo/craft-bigcommerce",
  "license": "mit",
  "support": {
    "email": "development@venveo.com",
    "issues": "https://github.com/venveo/craft-bigcommerce/issues?state=open",
    "source": "https://github.com/venveo/craft-bigcommerce",
    "docs": "https://github.com/venveo/craft-bigcommerce",
    "rss": "https://github.com/venveo/craft-bigcommerce/releases.atom"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.0.2",
    "craftcms/cms": "^4.3.0",
    "aligent/bigcommerce-api-client": "^0.12.0",
    "firebase/php-jwt": "^6.3.1"
  },
  "require-dev": {
    "craftcms/ecs": "dev-main",
    "craftcms/phpstan": "dev-main",
    "craftcms/rector": "dev-main",
    "craftcms/redactor": "*",
    "vlucas/phpdotenv": "^3.4"
  },
  "autoload": {
    "psr-4": {
      "venveo\\bigcommerce\\": "src/"
    }
  },
  "extra": {
    "handle": "bigcommerce",
    "name": "BigCommerce",
    "description": "Sync Big Commerce products into your content model",
    "developer": "Venveo",
    "documentationUrl": "https://github.com/venveo/craft-bigcommerce"
  },
  "scripts": {
    "check-cs": "ecs check --ansi",
    "fix-cs": "ecs check --ansi --fix",
    "phpstan": "phpstan --memory-limit=1G"
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "8.0.2"
    },
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    }
  }
}
